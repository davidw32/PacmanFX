    <children>
              <Button fx:id="mute" GridPane.hgrow="ALWAYS"  GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="2" text="AUDIO" />
              <Button onAction="#mute" fx:id="audio_text" text="ON" prefHeight="70.0" prefWidth="220.0"  GridPane.halignment="CENTER" GridPane.fillWidth="TRUE" GridPane.rowIndex="2" GridPane.columnIndex="4"></Button>
              <Button fx:id="resolution" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.columnIndex="2"  text="RESOLUTION" />
              <Button onAction="#ChangeResolution" fx:id="box_resolution" prefHeight="70.0" prefWidth="220.0" text="640x800" GridPane.rowIndex="3" GridPane.columnIndex="4" GridPane.halignment="CENTER"></Button>

              <Button fx:id="joystick" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="2"  text="CONTROLLER" />
              <Button fx:id="joystick_text" onAction="#ChangeControll" prefHeight="70.0" prefWidth="220.0" text="ON"  GridPane.halignment="CENTER" GridPane.fillWidth="TRUE" GridPane.rowIndex="4" GridPane.columnIndex="4"></Button>

              <Button fx:id="joystick" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.columnIndex="2"  text="MAP" />
              <Button fx:id="map_choose" onAction="#ChangeMap" prefHeight="70.0" prefWidth="220.0" GridPane.halignment="CENTER" GridPane.fillWidth="TRUE" GridPane.rowIndex="5" GridPane.columnIndex="4"></Button>

              <Button fx:id="goback" onAction="#back" GridPane.rowIndex="6"  GridPane.columnIndex="2" GridPane.halignment="CENTER" text="BACK" />

    </children>


