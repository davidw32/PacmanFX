<GridPane fx:id="options"  prefHeight="800.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Gameoptions">



    <columnConstraints>
        <ColumnConstraints percentWidth="2" />
        <ColumnConstraints percentWidth="2" />
        <ColumnConstraints percentWidth="38" />
        <ColumnConstraints percentWidth="2" />
        <ColumnConstraints percentWidth="31" />
        <ColumnConstraints percentWidth="25" />
